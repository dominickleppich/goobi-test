<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- internal name of the docstruct -->
    <docstruct>Thesis</docstruct>

    <!--field list of all data taken from the json
    object-->
    <!--  metadataName: internal name of the metadata field -->
    <!--  path: JSONPath to the value within the json object -->
    <!--  type: one of Number, String, Boolean. String is default -->
    <!-- default: default value, if the field is missing-->
    <jsonFields>
        <field metadataName="TitleDocMain" path="title_original" type="String" />

        <field metadataName="CatalogIDDigital" path="thesis_id" type="Number" />
        <field metadataName="ThesisId" path="thesis_id" type="Number" />

        <field metadataName="ThesisType" path="type" type="String" />
        <field metadataName="SubmissionDate" path="submitted_at" type="String" />
    </jsonFields>

    <!-- additional fields with static text -->
    <staticFields>
        <field metadataName="singleDigCollection" value="abc" />
        <field metadataName="RestrictionOnAccessLicense" value="xyz" />
        <field metadataName="UseAndReproductionLicense" value="123" />
    </staticFields>

</configuration>