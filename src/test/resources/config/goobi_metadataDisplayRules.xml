<?xml version="1.0" encoding="UTF-8"?>
<displayRules>
    <ruleSet>
        <context projectName="*">
          <select ref="junitMetadata">
                <item selected="false">
                    <label>a</label>
                    <value>a</value>
                </item>
                <item selected="false">
                    <label>b</label>
                    <value>b</value>
                </item>
        </select>
          <select1 ref="TitleDocMain">
                <item selected="false">
                    <label>main title</label>
                    <value>main title</value>
                </item>
                <item selected="false">
                    <label>other title</label>
                    <value>other title</value>
                </item>
        </select1>        
            <readonly ref="physPageNumber">
                <label />
            </readonly>
            <readonly ref="URN">
                <label />
            </readonly>
            <textarea ref="TitleDocMainShort">
                <label></label>
            </textarea>
            <htmlInput ref="Description">
                <label></label>
            </htmlInput>
            
            <select1 ref="UseAndReproductionLicense">
                <item selected="true">
                    <label>Nicht ausgew√§hlt</label>
                    <value></value>
                </item>
                <item selected="false">
                    <label>PDM</label>
                    <value>PDM</value>
                </item>
                <item selected="false">
                    <label>CC0</label>
                    <value>CC0</value>
                </item>
                <item selected="false">
                    <label>CC BY</label>
                    <value>CC BY</value>
                </item>
                <item selected="false">
                    <label>CC BY-SA</label>
                    <value>CC BY-SA</value>
                </item>
                <item selected="false">
                    <label>CC BY-ND</label>
                    <value>CC BY-ND</value>
                </item>
                <item selected="false">
                    <label>CC BY-NC</label>
                    <value>CC BY-NC</value>
                </item>
                <item selected="false">
                    <label>CC BY-NC-SA</label>
                    <value>CC BY-NC-SA</value>
                </item>
                <item selected="false">
                    <label>CC BY-NC-ND</label>
                    <value>CC BY-NC-ND</value>
                </item>
                <item selected="false">
                    <label>reserved</label>
                    <value>reserved</value>
