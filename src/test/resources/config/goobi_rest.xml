<?xml version='1.0' encoding='UTF-8'?>
<config>
    <endpoint path="/process/image/.*">
        <method name="get">
            <allow netmask="127.0.0.0/8"/>
        </method>
    </endpoint>
   
    <endpoint path="/closestep.*">
        <method name="post">
            <allow netmask="127.0.0.0/8" token="token"/>
        </method>
    </endpoint>
   
    <endpoint path="/addtoprocesslog.*">
        <method name="post">
            <allow netmask="0:0:0:0:0:0:0:1/128" token="CHANGEME"/>
            <allow netmask="127.0.0.0/8" token="CHANGEME"/>
        </method>
    </endpoint>   
   
</config>

